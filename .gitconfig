[core]
	excludesfile = ~/.gitignore_global
	pager = delta

[alias]
	st = status
	ci = commit -v
	last = log -1 HEAD
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit

[interactive]
	diffFilter = delta --color-only --light

[merge]
	conflictstyle = diff3

[diff]
	colorMoved = default

[delta]
	navigate = true
	line-numbers = true
